<div class="container">    
    <h1  id="test">Enter Your Information <small>by Alankrit Gupta</small> </h1>
    <div class="jumbotron ">
        <form action="/form" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{student._id}}">
            <h3>Information</h3><br>
            <div class="form-group">
                <label>Name: </label>
                <input type="text" name="name" placeholder="Enter username" class="form-control " value="{{student.name}}"></input>
                <div class="text-danger">
                    {{student.nameError}}
                </div>
            </div>
            <div class="form-group">
                <label >Roll Number: </label>
                <input type="text" name="rollNumber" placeholder="Enter Roll Number" class="form-control " value="{{student.rollNumber}}"></input>
                <div class="text-danger">
                    {{student.rollNumberError}}
                </div>
            </div>
            <div class="form-group">
                <label >Class: </label>
                <input type="text" name="class" placeholder="Enter Your Class" class="form-control " value="{{student.class}}"></input>
            </div>
            <div class="form-group">
                <button type ="submit" class="btn btn-info" >Enter</button>
                <a href="/form/list">View All</a>
            </div>
        </form>
    </div>
</div>